{
  "version": 4,
  "cmakeMinimumRequired": { "major": 3, "minor": 22 },
  "configurePresets": [
    {
      "name": "msvc-release",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build-msvc-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "ENABLE_CUDA": "ON"
      }
    }
  ],
  "buildPresets": [
    { "name": "msvc-release", "configurePreset": "msvc-release" }
  ],
  "testPresets": [
    { "name": "msvc-release", "configurePreset": "msvc-release" }
  ]
}
